<form class="{{cssClass}}" autocomplete="off">
    <div class="main-content">
        <div class="header-fields">
			{{#if isCharacter}}
				{{> actors/partials/headers/character }}
			{{else}}
				{{> actors/partials/headers/npc }}
			{{/if}}

            <div class="row">
                {{> actors/partials/skills }}

                <div class="column">
                    {{> actors/partials/tracks/stress }}
					{{> actors/partials/actor-image }}

					{{#if isCharacter}}
						{{> actors/partials/tracks/void }}
					{{/if}}
                </div>

                {{> actors/partials/styles }}
            </div>

			{{> actors/partials/navigation }}
        </div>

        <section class="sheet-body">
            {{> actors/partials/decorations/body-svg }}

			{{> actors/partials/tabs/focuses }}
			{{> actors/partials/tabs/abilities }}
			{{> actors/partials/tabs/belongings }}
			{{> actors/partials/tabs/biography }}
			{{> actors/partials/tabs/notes }}
        </section>
    </div>
</form>
